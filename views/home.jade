extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-10
				#user
					p: #[span Welcome #{user.firstName}] #[a(href='/signout', title='sign out') Sign out]					
						//-div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li Email    ---> #{user.email}
								li First Name ---> #{user.firstName} 
								li Last Name ---> #{user.lastName}
		div.row
			each sh in show
					div.col-sm-6
						p #{sh.popularity}
						p #{sh.name}
						img(src='https://image.tmdb.org/t/p/w300_and_h450_bestv2#{sh.poster_path}')
									
